{
  "testEnvironment": "jsdom",
  "clearMocks": true,
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "rootDir": ".",
  "setupFilesAfterEnv": [
    "<rootDir>/test/setup-tests.ts"
  ],
  "testMatch": [
    "**/__tests__/**/*.test.ts"
  ],
  "moduleNameMapper": {
    "^src/(.*)": "<rootDir>/src/$1",
    "^test/(.*)": "<rootDir>/test/$1"
  }
}
